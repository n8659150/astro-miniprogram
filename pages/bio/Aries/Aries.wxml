<scroll-view scroll-y class="bg-white scrollPage">
	<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
    <view slot="backText">返回</view>
		<view slot="content">
    <text class="title-text"></text>
    </view>
	</cu-custom>
	<view class="flex bio-main">
		<view class='header bg-gradual-blue-reverse' style='width:100%;height:286rpx'>
			<view class="flex bio-icon">
				<image src="/images/Aries.png" style="width:85rpx; height: 85rpx"></image>
			</view>
			<text class="flex bio-text">白羊座 <text class="divider"></text> 3.21 - 4.20</text>
		</view>
		<view class="nav">
			<view class="flex text-center bio-tabs">
				<view class="flex-sub bio-tab {{index==TabCur?'cur':''}}" wx:for="{{items.length}}" wx:key bindtap="tabSelect" data-id="{{index}}">
					{{items[index]['title']}}
				</view>
			</view>
		</view>
		<view class="bio-intro {{index==TabCur?'cur':''}}" wx:for="{{items.length}}" wx:key data-id="{{index + 4}}">
			<view class="bio-intro-text">{{items[index]['text1']}}</view>
			<view class="bio-intro-text">{{items[index]['text2']}}</view>
		</view>
	</view>
	<view class='cu-tabbar-height'></view>
</scroll-view>